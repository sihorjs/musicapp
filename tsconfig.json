{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "jsx": "react",
        "lib": ["es2015", "dom"],
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "paths": {
            "assets/*": ["assets/*"],
            "lang/*": ["lang/*"],
            "components/*": ["components/*"],
            "pages/*": ["pages/*"],
            "fixtures/*": ["fixtures/*"],
            "style/*": ["style/*"],
            "store/*": ["store/*"],
            "types/*": ["types/*"]
        },
        "outDir": "./dist",
        "removeComments": true,
        "target": "es6",
        "sourceMap": true
    }
}
